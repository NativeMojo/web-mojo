{
  "name": "MOJO Framework Example",
  "version": "2.0.0-phase1",
  "description": "MOJO Framework Phase 1: Core Architecture & View System Example Application",

  "container": "#app",
  "autoStart": true,
  "debug": true,

  "theme": {
    "primaryColor": "#007bff",
    "secondaryColor": "#6c757d",
    "successColor": "#28a745",
    "dangerColor": "#dc3545",
    "warningColor": "#ffc107",
    "infoColor": "#17a2b8",
    "lightColor": "#f8f9fa",
    "darkColor": "#343a40"
  },

  "framework": {
    "cacheTemplates": true,
    "autoRender": true,
    "enableDevTools": true
  },

  "pages": {
    "defaultPage": "home",
    "errorPage": "error",
    "routes": {
      "/": "home",
      "/demo": "demo",
      "/about": "about"
    }
  },

  "eventBus": {
    "maxListeners": 100,
    "enableDebugLogging": true
  },

  "development": {
    "showDebugPanel": true,
    "logLifecycleEvents": true,
    "logEventBusActivity": true
  },

  "meta": {
    "title": "MOJO Framework - Phase 1 Example",
    "description": "Demonstration of MOJO Framework Phase 1 features including View hierarchy, Page system, and event handling",
    "author": "MOJO Framework Team",
    "keywords": ["mojo", "framework", "javascript", "view", "component", "spa"]
  }
}
